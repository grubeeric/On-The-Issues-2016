<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_settings"
    tools:context="grube.eric.com.ontheissues2016.SettingsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="On The Issues 2016"
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="With the upcoming presidential election in 2016, it is important that everyone is well informed and educated on who is running for the position!"
        android:id="@+id/exp1"
        android:layout_below="@+id/title"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="The On The Issues 2016 app uses data from the popular ontheissues.org website in order to provide a detailed and un-biased (as possible) description of each candidate."
        android:id="@+id/exp2"
        android:layout_below="@+id/exp1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="It uses actual quotations and voting records made by each candidate in order to help educate users on what each candidate really stands for."
        android:id="@+id/exp3"
        android:layout_below="@+id/exp2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/exp4"
        android:layout_below="@+id/exp3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:text="This app does not attempt to sway the user into voting for any particular candidate. It simply displays real voting history and quotes made by each candidate."
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Use this app to help figure how who should get your vote this election. And please do remember to vote!"
        android:id="@+id/exp5"
        android:layout_below="@+id/exp4"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textColor="#000000" />
</RelativeLayout>
